@model Model.Models.CustomerVM

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register -> @Html.ActionLink("Login", "Login", "Login")</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-12 col-md-offset-12">
                @Html.LabelFor(model => model.Customer.name)
                @Html.TextBoxFor(model => model.Customer.name, new { id = "CustomerName", @class = "form-control", placeholder = "Name" })
                <br />
                @Html.LabelFor(model => model.Customer.surname)
                @Html.TextBoxFor(model => model.Customer.surname, new { id = "CustomerSurname", @class = "form-control", placeholder = "Surname" })
                <br />
                @Html.LabelFor(model => model.Customer.email)
                @Html.TextBoxFor(model => model.Customer.email, new { id = "CustomerEmail", @class = "form-control", placeholder = "Email" })
                <br />
                @Html.LabelFor(model => model.Customer.password)
                @Html.TextBoxFor(model => model.Customer.password, new { id = "CustomerPassword", @class = "form-control", type = "password", placeholder = "Password" })
                <br />

                <input type="submit" value="Register" class="btn btn-success btn-lg" />
            </div>
        </div>


    </div>
}

